{
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "airbnb-typescript",
        "plugin:jsx-a11y/recommended",
        "plugin:cypress/recommended"
    ],
    "plugins": [
        "formatjs"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "no-lonely-if": "off",
        "no-plusplus": "off",
        "max-len": ["error", { "code": 150 }],
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
        "newline-per-chained-call": "off",
        "prefer-destructuring": "off",
        "no-nested-ternary": "off",
        "no-restricted-syntax": "off",
        "import/no-cycle": "off",
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/destructuring-assignment": "off",
        "react/forbid-prop-types": "off",
        "react/require-default-props": "off",
        "jsx-a11y/no-onchange": "off",
        "react/function-component-definition": "off",
        "react/no-unstable-nested-components": "off",

        "react/jsx-no-constructed-context-values": "warn",
        "no-param-reassign": "warn",
        "react/no-array-index-key": "warn",
        "jsx-a11y/anchor-is-valid": "warn",
        "no-unsafe-optional-chaining": "warn",
        "import/no-import-module-exports":"warn",
        "prefer-regex-literals":"warn",
        "react/jsx-no-useless-fragment": "warn",
        "default-param-last": "off",
        "@typescript-eslint/default-param-last": ["error"],

        "no-console": "error",
        "import/order": ["error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index",
                    "object"
                ],
                "newlines-between": "always",
                "pathGroups": [
                    {"pattern": "types/**", "group": "internal", "position": "before"},
                    {"pattern": "react/**", "group": "internal", "position": "after"},
                    {"pattern": "redux/**", "group": "internal", "position": "after"},
                    {"pattern": "assets/**", "group": "internal", "position": "after"},
                    {"pattern": "services/**", "group": "internal", "position": "after"}
                ],
                "pathGroupsExcludedImportTypes": ["builtin"],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ],
        "react-hooks/exhaustive-deps": "error",

        "formatjs/enforce-default-message":  "error",
        "formatjs/enforce-placeholders": "error",
        "formatjs/no-camel-case": "error",
        "formatjs/no-emoji":  "error",
        "formatjs/no-multiple-whitespaces": "error",
        "formatjs/no-id": "error",
        "formatjs/no-complex-selectors":  "error"
    },
    "overrides": [
        {
            "files": ["**/*.stories.tsx"],
            "rules": {
                "import/no-extraneous-dependencies": "off"
            }
        },
        {
            "files": ["cypress/**/*.spec.js"],
            "rules": {
                "max-len": "off"
            }
        },
        {
            "files": ["cypress/**/*"],
            "rules": {
                "@typescript-eslint/no-unused-expressions": "off",
                "import/no-extraneous-dependencies": "off"
            }
        },
        {
            "files": ["src/TestUtils.tsx"],
            "rules": {
                "import/no-extraneous-dependencies": "off"
            }
        },
        {
            "files": ["src/**/*.tsx","src/*.ts", "src/**/**/*"],
            "rules": {
                // note you must disable the base rule as it can report incorrect errors
                "no-use-before-define": "off",
                "@typescript-eslint/no-use-before-define": ["error"],
                "@typescript-eslint/space-before-blocks": "off",
                "no-console": "error",
                "indent": ["off", 0],
//                "@typescript-eslint/indent": "off",
                "default-param-last": "off",
                "@typescript-eslint/default-param-last": ["error"]
            }
        },
        {
          "files": ["src/redux/**/reducer.ts"],
          "rules": {
            "@typescript-eslint/default-param-last": "off"
          }
        }
    ],

    "env": {
        "jest": true
    }
}
